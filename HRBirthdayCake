
int[] candles ={ 1, 2, 3, 4, 5, 7, 7, 8, 7,8,8,8,8 };
int max = 0;
int maxcount=0; 

for (int i = 0; i < candles.Length; i++)
{
    if (candles[i] == max)
    {
        maxcount++;
    }

    if (candles[i] > max)
    {
        max = candles[i];
        maxcount = 1;
    }
   
   
}
Console.WriteLine(maxcount);
